  "scripts": {
    "release": "uv run python scripts/release.py $*",
    "alpha": "uv run python scripts/release.py --alpha",
    "build": "node esbuild.config.mjs && tsc -p packages/colight-serde/tsconfig.json",
    "dev": "node esbuild.config.mjs --watch",
    "docs:watch": "yarn build && uv run python -m mkdocs serve",
    "docs:build": "yarn build && uv run python -m mkdocs build",
    "test:js": "yarn build && yarn vitest run",
    "test:js-watch": "node --experimental-vm-modules node_modules/vitest/vitest.mjs",
    "test:py": "uv run python -m pytest packages --ignore=packages/colight/tests/visual -x",
    "test:visual": "uv run python -m pytest packages/colight/tests/visual",
    "test:images": "uv run python -m pytest packages/colight/tests/test_screenshots.py",
    "test:site": "uv run python -m pytest packages/colight/tests",
    "test": "npm-run-all test:py test:js",
    "test:e2e": "npx playwright test",
    "test:e2e:picking": "npx playwright test packages/colight/tests/e2e/picking.spec.ts",
    "pyright": "uv run pyright",
    "watch-examples": "uv run python -m colight_cli publish packages/colight/tests/examples --serve",
    "colight": "uv run python -m colight_cli --",
    "worktree": "sh -c 'git worktree add ../$1 && code ../$1 --new-window' -- "
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
