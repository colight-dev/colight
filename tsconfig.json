{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ES2015"],
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["@webgpu/types", "@react-three/fiber"],
    "baseUrl": ".",
    "paths": {
      "@colight/serde": ["packages/colight-serde/src/js/index.ts"]
    }
  },
  "include": ["packages/colight/src/js", "packages/colight-serde/src/js"],
  "exclude": ["node_modules"]
}
