{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "rootDir": "./src/js",
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/js/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
